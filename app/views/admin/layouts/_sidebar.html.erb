<aside class="pmd-sidebar sidebar-default pmd-sidebar-slide-push
  pmd-sidebar-left pmd-sidebar-open bg-fill-darkblue sidebar-with-icons"
  role="navigation">
  <ul class="nav pmd-sidebar-nav text-left">
    <li class="dropdown pmd-dropdown pmd-user-info
